<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.ProyectoAeropuerto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Para el modo noche, puedes usar los mismos colores o definir unos más oscuros si lo deseas. -->
        <!-- Por simplicidad, usaremos los mismos que en el modo día. -->

        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Personaliza tu tema aquí. -->
    </style>

    <style name="Theme.ProyectoAeropuerto" parent="Base.Theme.ProyectoAeropuerto" />
</resources>