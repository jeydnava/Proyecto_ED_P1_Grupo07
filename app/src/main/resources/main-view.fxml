<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectoaeropuertofx.ViewController">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label text="Buscar Ruta Óptima"/>
            </VBox>
    </top>

    <center>
        <Pane fx:id="graphPane"/>
    </center>

    <right>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
            <Button text="Añadir Aeropuerto" onAction="#handleAnadirAeropuerto"/>
            <Button text="Añadir Vuelo" onAction="#handleAnadirVuelo"/>
            <Button text="Ver Estadísticas" onAction="#handleVerEstadisticas"/>
        </VBox>
    </right>

</BorderPane>